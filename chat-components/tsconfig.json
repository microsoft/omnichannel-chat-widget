{
  "compilerOptions": {
    "target": "es6",
    "outDir": "lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "lib/types",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}