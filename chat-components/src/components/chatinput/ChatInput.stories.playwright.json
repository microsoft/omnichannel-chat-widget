{
  "stories": [
    {
      "id": "components-chatinput--default",
      "title": "Default",
      "name": "Default ChatInput",
      "description": "Basic ChatInput component with default styling and placeholder text",
      "tests": [
        {
          "name": "Default state render",
          "actions": [
            {
              "type": "screenshot",
              "target": "[data-testid='chat-input']",
              "description": "Capture default ChatInput appearance"
            }
          ]
        },
        {
          "name": "Text input interaction",
          "actions": [
            {
              "type": "fill",
              "target": "[data-testid='chat-input'] input",
              "value": "Hello world",
              "description": "Type text into ChatInput"
            },
            {
              "type": "screenshot",
              "target": "[data-testid='chat-input']",
              "description": "Capture ChatInput with typed text"
            }
          ]
        }
      ]
    },
